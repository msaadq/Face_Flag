<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    android:gravity="bottom">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:measureWithLargestChild="false"
        android:nestedScrollingEnabled="false"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#232569c9">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/delete"
            android:background="#00ffffff"
            android:tint="@color/white"
            android:id="@+id/delete_button"
            android:paddingLeft="100sp"
            android:paddingTop="100sp"
            android:paddingRight="80sp"
            android:paddingBottom="100sp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:src="@mipmap/share"
            android:tint="@color/white"
            android:padding="70sp"
            android:id="@+id/share_button"
            android:clickable="false" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/save"
            android:background="#00ffffff"
            android:tint="@color/white"
            android:id="@+id/save_button"
            android:paddingLeft="80sp"
            android:paddingTop="100sp"
            android:paddingRight="100sp"
            android:paddingBottom="100sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:measureWithLargestChild="false"
        android:nestedScrollingEnabled="false"
        android:gravity="center"
        android:background="#232569c9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:src="@mipmap/share"
            android:tint="@color/white"
            android:id="@+id/view_1"
            android:clickable="false"
            android:paddingLeft="130sp"
            android:paddingTop="70sp"
            android:paddingRight="70sp"
            android:paddingBottom="70sp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/save"
            android:background="#00ffffff"
            android:tint="@color/white"
            android:id="@+id/view_2"
            android:paddingLeft="80sp"
            android:paddingTop="100sp"
            android:paddingRight="140sp"
            android:paddingBottom="100sp" />
    </LinearLayout>
</RelativeLayout>