<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:id="@+id/first_screen_linear_layout"
    android:background="#ffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/comp_gen_face"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:cropToPadding="true"
        android:outlineProvider="bounds"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TIME HAS"
        android:id="@+id/header_text_1"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUPPORT YOUR FAVORITE"
        android:id="@+id/footer_text_1"
        android:textColor="@color/white"
        android:layout_above="@+id/footer_text_2"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="22sp"
        android:paddingBottom="5sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PSL TEAM!"
        android:id="@+id/footer_text_2"
        android:textColor="@color/white"
        android:layout_above="@+id/gallary_button"
        android:layout_alignStart="@+id/gallary_button"
        android:gravity="center"
        android:textSize="22sp"
        android:paddingBottom="40sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COME!"
        android:id="@+id/header_text_2"
        android:textColor="@color/white"
        android:layout_below="@+id/header_text_1"
        android:layout_alignEnd="@+id/gallary_button"
        android:gravity="center"
        android:textSize="50sp" />

    <Button
        android:id="@+id/gallary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PICK A PHOTO"
        android:backgroundTint="@color/blue"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:padding="30sp"
        android:elevation="1dp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>